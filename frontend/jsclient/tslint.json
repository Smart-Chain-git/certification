{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**",
      "src/locales/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "double"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "semicolon": [
      true,
      "never"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "array-type": [
      true,
      "generic"
    ]
  }
}
